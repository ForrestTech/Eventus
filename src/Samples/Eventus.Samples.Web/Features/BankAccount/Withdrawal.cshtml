@model Eventus.Samples.Web.Features.BankAccount.Withdrawal.Command

@{
    ViewData["Title"] = "Withdrawal";
}

<h2>Withdrawal</h2>

<form asp-controller="BankAccount" asp-action="Withdrawal" method="post" class="form-horizontal">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="AccountId" />
    <div class="form-group">
        <label asp-for="Amount" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Amount" class="form-control" />
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Withdrawal" class="btn btn-default" />
        </div>
    </div>
</form>

<div>
    <a asp-action="BankAccount">Back to My Account</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
