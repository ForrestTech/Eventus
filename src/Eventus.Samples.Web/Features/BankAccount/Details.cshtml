@model Eventus.Samples.Contracts.BankAccount.BankAccountSummary
@{
    ViewData["Title"] = "Account Summary";
}

<h2>@ViewData["Title"].</h2>
<hr />
<dl class="dl-horizontal">
    <dt>Name:</dt>
    <dd>@Model.Name</dd>
    <dt>Balance:</dt>
    <dd>@Model.Balance</dd>
</dl>
<h3>Actions</h3>
<a asp-controller="BankAccount" asp-action="Deposit" class="btn btn-primary">Deposit</a>
<a asp-controller="BankAccount" asp-action="Withdrawal" class="btn btn-primary">Withdrawal</a>


