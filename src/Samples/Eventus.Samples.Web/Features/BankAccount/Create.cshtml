@model Eventus.Samples.Web.Features.BankAccount.Create.Command
@{
    ViewData["Title"] = "Create Bank Account";
}

<h2>@ViewData["Title"].</h2>

<form asp-controller="BankAccount" asp-action="Create" method="post" class="form-horizontal">
    <h4>Give your new account a name.</h4>
    <hr />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input asp-for="AccountId" type="hidden"/>
    <div class="form-group">
        <label asp-for="AccountName" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="AccountName" class="form-control" />
            <span asp-validation-for="AccountName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-default">Create</button>
        </div>
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial").ConfigureAwait(false); }
}
